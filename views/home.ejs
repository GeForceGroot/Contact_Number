<html>

<head>
    <title>

        <%= title%>
    </title>
    <link rel="stylesheet" href="/asstes/css/home.css">
</head>

<body>
    <h1>Contact List</h1>


    <div>
        <ul>

            <% for (let i of contact_list ){%>
                <li>
                    <div class=" contact">
                        <p>
                         <%= i.name%>
                        </p>
                        <p>
                         <%=i.phone %>
                        </p>
                    </div>
                    <div class="delete-contact">
                    <a href="/delte-contact/?id=<%= i.phone %>">
                        <i class="fas fa-window-close"></i>
                    </a>
                    </div>
                </li>
            <%}%>
         </ul>
    </div>
    <form action="/create-contact" method="post">
          <input type="text" name="name" placeholder="Enter Name" required>
          <input type="text" name="phone" placeholder="Enter Mobile No." required>
        <button type="submit" class="btn btn-primary">Add Contact</button>
       <script type="text/javascript" src="/asstes/js/home.js"></script>
      </form>
